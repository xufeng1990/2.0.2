<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_play_type"
        android:gravity="center"
        android:orientation="vertical">

        <com.zhuomogroup.ylyk.views.ScrollTextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="11dp"
            android:paddingTop="12dp"
            android:text="节目名称"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夏鹏"
                android:layout_centerVertical="true"
                android:textSize="11sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="1px"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/teacher_name"
                android:background="#9a9b9c" />

            <TextView
                android:id="@+id/course_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/view1"
                android:text="23:30"
                android:layout_centerVertical="true"
                android:textSize="11sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="1px"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/course_duration"
                android:background="#9a9b9c" />


            <TextView
                android:id="@+id/course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/view2"
                android:text="2016/01/23"
                android:textSize="11sp" />


        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/list_play_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="7dp"
        android:visibility="invisible"
        android:scaleType="centerInside"
        android:paddingRight="7dp"
        android:src="@mipmap/playlist_play" />


</com.zhy.autolayout.AutoRelativeLayout>