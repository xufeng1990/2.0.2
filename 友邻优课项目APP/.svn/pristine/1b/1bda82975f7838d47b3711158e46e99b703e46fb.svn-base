                viewPager.setVisibility(View.VISIBLE);
                img_change.setImageResource(R.mipmap.viewpager_visible);
                SPUtils.put(this, VIEW_PAGER_IS_GONE, false);
            }
        } else if (velocityY < -20) {
            // 向上
            if (Math.abs(velocityX) < Math.abs(velocityY)) {
                viewPager.setVisibility(View.GONE);
                img_change.setImageResource(R.mipmap.viewpager_gone);
                SPUtils.put(this, VIEW_PAGER_IS_GONE, true);
            }
        }
        return false;
    }

