    @SuppressLint("SetTextI18n")
    private void myLastWriteTips() {
        String my_tips = (String) SPUtils.get(YLNewAudioActivity.this, courseId + WRITE_TIPS_STRING, "");
        if (!my_tips.equals("")) {
            try {
                JSONObject object = new JSONObject(my_tips);
                String write_tips = object.getString(WRITE_TIPS_STRING);
                MY_COURSEID = object.getInt(COURSEID);
                JSONArray jsonArray = object.getJSONArray(SELECT_IMGS);
                selectedPhotos.clear();
                for (int i = 0; i < jsonArray.length(); i++) {
                    String string = jsonArray.getString(i);
                    selectedPhotos.add(string);
                }
                if (selectedPhotos.size() > 0) {
                    img_size.setVisibility(View.VISIBLE);
                    img_size.setText(selectedPhotos.size() + "");
                } else {
                    img_size.setVisibility(View.GONE);
                }
                tips_editText.setText(write_tips);
                tips_editText.setSelection(tips_editText.getText().length());
            } catch (JSONException e) {
                e.printStackTrace();
            }
        } else {
            tips_editText.setText("");
            selectedPhotos.clear();
            img_size.setVisibility(View.GONE);
        }
    }


