     *
     * @param jsonObject
     * @param replace
     * @param teachers
     * @param albumId
     * @throws JSONException
     */
    private void loadAudio(JSONObject jsonObject, String replace, JSONArray teachers, int albumId) throws JSONException {
        loading_re.setVisibility(View.GONE);

        if (!isFromDownload) {
