  renderTabOption(tab, i) {

		let color = this.props.activeTab == i ? "#B41930" : "#5a5a5a";
    let viewColor = this.props.activeTab == i ?  "#B41930" : "#ffffff" ;// 判断i是否是当前选中的tab，设置不同的颜色
