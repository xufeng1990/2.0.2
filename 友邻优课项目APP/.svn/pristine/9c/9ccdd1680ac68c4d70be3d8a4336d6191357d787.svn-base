@import "style.00-variables";
.ui-badge {
    border-radius: 2px;
    min-width: 22px;
    height: 22px;
    line-height: 1.3em;
    font-size: 14px;
    padding: 2px 4px;
    display: inline-block;
    text-align: center;
    &.ui-round {
        min-width: 20px;
        @radius: 16px;
        border-radius: @radius;
        border-top-left-radius: @radius;
        border-top-right-radius: @radius;
        border-bottom-left-radius: @radius;
        border-bottom-right-radius: @radius;
    }
}

.ui-redhot {
    position: relative;
    &:after {
        content: '';
        position: absolute;
        display: block;
        width: 8px;
        height: 8px;
        background-color: @red;
        border-radius: 5px;
        right: -4px;
        top: -4px;
        background-clip: padding-box;
    }
}

.ui-greenhot {
    position: relative;
    &:after {
        content: '';
        position: absolute;
        display: block;
        width: 8px;
        height: 8px;
        background-color: @green;
        border-radius: 5px;
        right: -4px;
        top: -4px;
        background-clip: padding-box;
    }
}

.ui-spinner-bounce {
    @size: 42px;
    position: relative;
    width: 100%;
    height: @size;
    
    .ui-spinner {
        width: @size;
        height: @size;
        border-radius: 50%;
        background-color: @yellow;
        opacity: 0.6;
        position: absolute;
        left: 50%;
        margin-left: -(@size / 2);
        animation: ui-animate-spinner-bounce 2.0s infinite ease-in-out;
    }
    
    .ui-spinner:last-child {
        animation-delay: -1.0s;
    }
    
    &.ui-red .ui-spinner {
        background-color: @red;
    }    
    &.ui-yellow .ui-spinner {
        background-color: @yellow;
    }      
    &.ui-orange .ui-spinner {
        background-color: @orange;
    }     
    &.ui-blue .ui-spinner {
        background-color: @blue;
    }    
    &.ui-green .ui-spinner {
        background-color: @green;
    }
}
@keyframes ui-animate-spinner-bounce {
    0%,
    100% {
        transform: scale(0.0);
    }
    50% {
        transform: scale(1.0);
    }
}

.ui-spinner-stretch {
    @size: 42px;
    width: 100%;
    height: @size;
    text-align: center;
    font-size: 0px;
    
    .ui-spinner {
        display: inline-block;
        width: (@size / 10);
        height: 100%;
        margin-left: 2px;
        margin-right: 2px;
        background-color: @yellow;
        animation: ui-animate-spinner-stretch 1.2s infinite ease-in-out;
    }
    
    .ui-spinner:nth-child(2) {
        animation-delay: -1.1s;
    }
    .ui-spinner:nth-child(3) {
        animation-delay: -1.0s;
    }
    .ui-spinner:nth-child(4) {
        animation-delay: -0.9s;
    }
    .ui-spinner:nth-child(5) {
        animation-delay: -0.8s;
    }
    .ui-spinner:nth-child(6) {
        animation-delay: -0.7s;
    }
    .ui-spinner:nth-child(7) {
        animation-delay: -0.6s;
    }
    .ui-spinner:nth-child(8) {
        animation-delay: -0.5s;
    }
    
    &.ui-red .ui-spinner {
        background-color: @red;
    }    
    &.ui-yellow .ui-spinner {
        background-color: @yellow;
    }   
    &.ui-orange .ui-spinner {
        background-color: @yellow;
    }     
    &.ui-blue .ui-spinner {
        background-color: @blue;
    }    
    &.ui-green .ui-spinner {
        background-color: @green;
    }
}
@keyframes ui-animate-spinner-stretch {
    0%, 
    40%, 
    100% {
        transform: scaleY(0.4);
    }
    20% {
        transform: scaleY(1.0);
    }
}

.ui-spinner-dot {
    @size: 12px;
    width: 100%;
    height: @size;
    text-align: center;
    font-size: 0px;
    
    .ui-spinner {
        display: inline-block;
        width: @size;
        height: @size;
        margin-left: (@size / 2);
        margin-right: (@size / 2);
        @radius: 99999px;
        border-radius: @radius;
        border-top-left-radius: @radius;
        border-top-right-radius: @radius;
        border-bottom-left-radius: @radius;
        border-bottom-right-radius: @radius;
        background-color: @yellow;
        animation: ui-animate-spinner-dot 1.4s infinite ease-in-out;
        animation-fill-mode: both;
    }
    .ui-spinner:nth-child(1) {
        animation-delay: -0.32s;
    }
    .ui-spinner:nth-child(2) {
        animation-delay: -0.16s;
    }
    .ui-spinner:nth-child(3) {
        animation-delay: 0s;
    }
    
    &.ui-red .ui-spinner {
        background-color: @red;
    }    
    &.ui-yellow .ui-spinner {
        background-color: @yellow;
    }   
    &.ui-orange .ui-spinner {
        background-color: @yellow;
    }     
    &.ui-blue .ui-spinner {
        background-color: @blue;
    }    
    &.ui-green .ui-spinner {
        background-color: @green;
    }
}
@keyframes ui-animate-spinner-dot {
    0%,
    80%,
    100% {
        transform: scale(0.0);
    }
    40% {
        transform: scale(1.0);
    }
}