<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.zhuomogroup.ylyk.activity.YLTelephoneLoginActivity">

    <RelativeLayout
        android:id="@+id/window"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/title_back_img" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111px"
        android:src="@drawable/login_logofont" />


    <EditText
        android:id="@+id/telephone"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:layout_below="@+id/title"
        android:layout_marginLeft="68px"
        android:layout_marginRight="68px"
        android:layout_marginTop="92px"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入手机号码"
        android:inputType="numberSigned"
        android:maxEms="11"
        android:maxLength="11"
        android:textColor="#202020"
        android:textColorHint="#c8c8c8"
        android:textSize="16px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@+id/telephone"
        android:layout_marginLeft="68px"
        android:layout_marginRight="68px"
        android:background="#9a9b9c" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:layout_below="@+id/telephone"
        android:layout_marginLeft="68px"
        android:layout_marginTop="30px"
        android:layout_toLeftOf="@+id/code_text"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入验证码"
        android:inputType="number"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyz"
        android:lines="1"
        android:maxLines="1"
        android:textColor="#202020"
        android:textColorHint="#c8c8c8"
        android:textSize="16px" />

    <View
        android:id="@+id/view_code"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@+id/password"
        android:layout_marginLeft="68px"
        android:layout_marginRight="68px"
        android:background="#9a9b9c" />

    <TextView
        android:id="@+id/code_text"
        android:layout_width="81px"
        android:layout_height="26px"
        android:layout_above="@+id/view_code"
        android:layout_alignRight="@+id/view_code"
        android:layout_marginBottom="4px"
        android:background="@drawable/code_bg_login"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@drawable/code_text_color" />


    <TextView
        android:id="@+id/text_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_code"
        android:layout_marginLeft="68px"
        android:layout_marginRight="68px"
        android:layout_marginTop="10px"
        android:text="您可以使用绑定过友邻优课的手机号码登录，仅支持中国大陆（＋86）手机号"
        android:textColor="#c8c8c8"
        android:textSize="11px" />

    <TextView
        android:id="@+id/login_button"
        android:layout_width="239px"
        android:layout_height="44px"
        android:layout_below="@+id/text_show"
        android:layout_marginLeft="68px"
        android:layout_marginRight="68px"
        android:layout_marginTop="40px"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@drawable/login_text_color"
        android:textSize="18px" />


</RelativeLayout>
